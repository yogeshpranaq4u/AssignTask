<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dim_30dp"
        android:background="@drawable/frame"
        app:layout_constraintBottom_toTopOf="@id/takePicture"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/takePicture"
        android:layout_marginBottom="@dimen/dim_30dp"
        android:src="@drawable/camera_take"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/dim_50dp"
        android:layout_height="@dimen/dim_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/retakePicture"
        android:layout_marginBottom="@dimen/dim_30dp"
        android:visibility="gone"
        android:src="@drawable/retake"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/dim_300dp"
        android:layout_height="@dimen/dim_300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/viewImage"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>